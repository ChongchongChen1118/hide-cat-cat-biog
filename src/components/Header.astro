---
const path = Astro.url.pathname;
const is = (p) => path === p || (p !== "/" && path.startsWith(p));
---

<header>
  <div class="container">
    <div class="header-inner">
      <a class="site-logo" data-text="hide-cat-cat." href="/" style="font-weight:700;">
        Hide-Cat-Cat<span style="color:var(--accent);">.</span>
      </a>

      <nav class="small nav">
        <a class={is("/") ? "active" : ""} href="/">首页</a>
        <a class={is("/blog") ? "active" : ""} href="/blog">博客</a>
        <a class={is("/about") ? "active" : ""} href="/about">关于</a>
        <a class={is("/friends") ? "active" : ""} href="/friends">MY 朋友们</a>
        <a class={is("/now") ? "active" : ""} href="/now">现在 NOW</a>
        <a class={is("/search") ? "active" : ""} href="/search">搜索</a>
      </nav>
    </div>
  </div>
</header>

<style>
  .site-header{
    position: sticky;
    top: 0;
    z-index: 20;


  }

  .header-inner{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:14px;
    padding: 14px 0; /* 让 header 有高度 */
  }

  .nav{
    display:flex;
    align-items:center;
    gap:10px;
    flex-wrap:wrap;
    justify-content:flex-end;
  }

  /* 小屏稍微紧凑点 */
  @media (max-width: 640px){
    .header-inner{ padding: 12px 0; }
    .nav{ gap:8px; }
  }
</style>
